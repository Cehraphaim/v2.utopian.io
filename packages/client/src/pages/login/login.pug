q-layout.u-page-login
    div.row
      div.col-md-4.col-sm-12.col-xs-12.column.justify-center
        div.column.items-center.login-from
          img.q-mb-xl(src="~assets/img/logo-black.svg")
          q-btn.q-mb-sm(@click="startGithubLogin", icon="mdi-github-circle", color="white", text-color="black", :label="$t('login.button.login')")
          p.text-center.title {{$t('login.title')}}
          p.text-center.subtitle {{$t('login.subtitle')}}
          q-btn.q-mt-sm.signup(@click="startGithubLogin", icon="mdi-github-circle", color="primary", :label="$t('login.button.signUp')")
      div.side-img.col-md-8
        img(src="~assets/img/background.jpg")
